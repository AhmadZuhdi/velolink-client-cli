{
  "bluetooth": {
    "autoConnect": true,
    "baudRate": 9600,
    "timeout": 5000,
    "preferredPorts": ["COM", "tty.HC-05", "/dev/rfcomm"]
  },
  "keySimulation": {
    "enabled": true,
    "delayBetweenKeys": 10,
    "enabledActions": [
      "media_controls",
      "volume_controls", 
      "navigation",
      "function_keys",
      "text_input"
    ]
  },
  "scenarios": {
    "enableLogging": true,
    "cooldownMs": 100,
    "customMappings": {
      "CUSTOM_1": "space",
      "CUSTOM_2": "enter",
      "EMERGENCY": "ctrl+alt+delete"
    }
  },
  "logging": {
    "level": "info",
    "enableConsoleOutput": true,
    "enableFileOutput": false,
    "logFile": "logs/velolink.log"
  }
}
